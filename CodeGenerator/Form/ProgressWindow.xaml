<Window x:Class="CodeGenerator.Form.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="生成进度" 
        Height="80" 
        Width="300" 
        WindowStartupLocation="CenterScreen" 
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="ProgressBarWindow_OnLoaded"
        Closed="ProgressBarWindow_OnClosed"
        Icon="/CodeGenerator;component/House.ico">
    <Grid Height="50">
        <DockPanel>
            <TextBlock Name="TxtProgress" Text="进度" Width="24" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <ProgressBar Height="20" Name="GenerateProgress" Width="250"/>
        </DockPanel>
    </Grid>
</Window>